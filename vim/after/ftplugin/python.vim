set tabstop=4
set softtabstop=4
set shiftwidth=4
set textwidth=79
set expandtab
set autoindent
set smartindent
set fileformat=unix

" Enable folding
set foldmethod=indent
set foldlevel=99

"Enable folding with spacebar
nnoremap <leader><space> za
" Fold all
nnoremap <leader>a zM
" Unfold all
nnoremap <leader>m zR

